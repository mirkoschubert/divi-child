@import '../../styles/variables'
@import '../../styles/mixins'

.dvc-settings-modal
  wp-modal-style()

  // Modal selbst
  .components-modal__content
    box-shadow: none !important
    border: 1px solid #ddd
    border-radius: 4px
    width: 100% !important
    max-width: 600px !important
    height: auto !important
    max-height: 90vh !important
    padding: 0
    
  // Header
  .components-modal__header
    padding: 20px 24px 16px
    
    .components-modal__header-heading
      font-size: 18px
      font-weight: 600
      color: #1e1e1e
      margin: 0
      
  // Body - volle Breite nutzen
  .components-modal__content .components-modal__content
    padding: 0 !important
    
  .dvc-form
    padding: 24px 0
    
  .dvc-loading
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    padding: 40px 24px
    
    p
      margin-top: 16px
      color: #646970
      font-size: 14px
      
  // Footer mit Buttons
  .dvc-modal-footer
    display: flex
    justify-content: flex-end
    gap: 12px
    padding: 16px 24px
    border-top: 1px solid #e0e0e0
    background: #f9f9f9
    
    .components-button
      min-height: 36px
      
    .components-button.is-primary
      background: #2271b1
      border-color: #2271b1
      
      &:hover:not(:disabled)
        background: #135e96
        border-color: #135e96
        
    .components-button.is-tertiary
      color: #646970
      
      &:hover:not(:disabled)
        color: #1e1e1e
        
  // Responsive
  @media (max-width: 782px)
    .components-modal__content
      width: 95% !important
      max-width: 95% !important
      margin: 20px auto !important
      
    .dvc-form
      padding: 16px 0
      
    .dvc-modal-footer
      padding: 12px 16px
      flex-direction: column-reverse
      gap: 8px
      
      .components-button
        width: 100%
        justify-content: center