// Common Mixins
wordpress-field()
  padding $spacing-md $spacing-lg
  border-top 1px solid $admin-border

  &:first-child
    border-top none

// Special styling for group fields - no extra spacing
wordpress-field-grouped()
  margin-bottom 0
  padding-bottom 0
  padding-left 0
  padding-right 0

// Card Style Mixin
card-style()
  background white
  border 1px solid $border-color
  border-radius $border-radius
  box-shadow $box-shadow
  transition all $transition-normal

// Flex Between Mixin
flex-between()
  display flex
  justify-content space-between
  align-items center

// Grid Responsive Mixin
grid-responsive($cols = 4, $gap = 1.5rem)
  display grid
  grid-template-columns repeat($cols, minmax(250px, 1fr))
  grid-gap $gap
  
  @media (max-width: 1280px)
    grid-template-columns repeat(3, minmax(250px, 1fr))
  
  @media (max-width: 900px)
    grid-template-columns repeat(2, minmax(250px, 1fr))
  
  @media (max-width: $breakpoint-mobile)
    grid-template-columns repeat(1, minmax(250px, 1fr))

// Button Style Mixin
button-style()
  padding 8px 16px
  border-radius 3px
  cursor pointer
  transition background-color $transition-fast
  
  &:hover
    opacity 0.8
  
  &:disabled
    opacity 0.6
    cursor not-allowed

// State Mixins
state-saving()
  opacity 0.6
  
  &::after
    content ''
    position absolute
    top 50%
    right 10px
    width 18px
    height 18px
    border unquote('2px solid color-mix(in srgb, var(--wp-admin-theme-color-2), white 70%)')
    border-top 2px solid $theme-color-primary
    border-radius 50%
    animation spin 1s linear infinite
    transform translateY(-50%)

state-success()
  background-color rgba($wp-success, 0.1)
  border-color lighten($wp-success, 30%)

state-error()
  background-color rgba($wp-error, 0.1)
  border-color lighten($wp-error, 30%)

// WordPress Component Integration
wp-card-override()
  .components-card
    box-shadow none
    border none
    background transparent
    
    &__header
      padding 0
      border-bottom none
    
    &__body
      padding 0

wp-modal-style()
  .components-modal__content
    max-width 800px
    width 70vw
    
    @media (max-width: $breakpoint-tablet)
      width 95vw
      margin 10px

// Loading Spinner Animation
@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)